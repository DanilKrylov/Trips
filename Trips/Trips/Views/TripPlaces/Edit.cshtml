@model Trips.Models.TripPlace

@{
    ViewData["Title"] = "Edit";
}

<div class="form">
    <form asp-action="Edit">
        <div class="form__content">
            <div class="form__title">
                <span>Edit TripPlaces</span>
            </div>
            <div class="form__items">
                <input type="hidden" asp-for="TripPlaceId" />
                <div class="form__items__item">
                    <span class="display">Country</span>
                    <input asp-for="Country">
                    <span class="validation" asp-validation-for="Country"></span>
                </div>
                <div class="form__items__item">
                    <span class="display">Locality</span>
                    <input asp-for="Locality">
                    <span class="validation" asp-validation-for="Locality"></span>
                </div>
                <div class="form__items__item">
                    <span class="display">PlaceType</span>
                    <input asp-for="PlaceType">
                    <span class="validation" asp-validation-for="PlaceType"></span>
                </div>
                <div class="form__items__item">
                    <span class="display">PlaceName</span>
                    <input asp-for="PlaceName">
                    <span class="validation" asp-validation-for="PlaceName"></span>
                </div>
                <div class="form__items__item">
                    <span class="display">Description</span>
                    <input asp-for="Description">
                    <span class="validation" asp-validation-for="Description"></span>
                </div>
                <div class="form__items__item">
                    <input type="submit" value="Save">
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
