@model Trips.Models.TripType

@{
    ViewData["Title"] = "Edit";
}

<div class="form">
    <form asp-action="Edit">
        <div class="form__content">
            <div class="form__title">
                <span>Edit TripType</span>
            </div>
            <div class="form__items">
                <input type="hidden" asp-for="TripTypeId" />
                <div class="form__items__item">
                    <span class="display">Name</span>
                    <input asp-for="Name">
                    <span class="validation" asp-validation-for="Name"></span>
                </div>
                <div class="form__items__item">
                    <span class="display">Description</span>
                    <input asp-for="Description">
                    <span class="validation" asp-validation-for="Description"></span>
                </div>
                <div class="form__items__item">
                    <span class="display">DangerLevel</span>
                    <input asp-for="DangerLevel">
                    <span class="validation" asp-validation-for="DangerLevel"></span>
                </div>
                <div class="form__items__item">
                    <span class="display">Preparation</span>
                    <input asp-for="Preparation">
                    <span class="validation" asp-validation-for="Preparation"></span>
                </div>
                <div class="form__items__item">
                    <input type="submit" value="Save">
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
