<div>
    <h4>Registered Clients</h4>
    <hr />
    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Surname
                </th>
                <th>
                    Patronomic
                </th>
                <th>
                    PassportCode
                </th>
                <th>
                    Gender
                </th>
                <th>
                    Country
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.TripClients.Select(c => c.Client))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Patronomic)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PassportCode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Country)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.TripId">Edit</a> |
